{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "extends": "airbnb-base",
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "semi": false,
        "printWidth": 80
      }
    ],
    "semi": "off",
    "import/no-extraneous-dependencies": "off",
    "space-before-function-paren": "off",
    "function-paren-newline": "off",
    "import/extensions": ["error", "never", { "svg": "always" }],
    "comma-dangle": "off",
    "arrow-parens": "off",
    "object-curly-newline": "off",
    "no-use-before-define": ["error", { "functions": false, "classes": false }],
    "no-param-reassign": [
      "off",
      {
        "props": true,
        "ignorePropertyModificationsFor": ["store", "accumulator"]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {}
    }
  }
}
